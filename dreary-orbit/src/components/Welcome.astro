---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
// Optional: import Navbar from "../components/Navbar.astro";

// Local images from public/img folder
const images = [
  "/img/farm.jpg",
  "/img/padi.jpg",
  "/img/rice.jpg",
  "/img/tea.jpg",
  "/img/teh.jpg",
  "/img/wheat.jpg",
  "/img/check.jpg",
  "/img/farm.jpg", // repeat for 9 total
  "/img/padi.jpg",
];
---

<Layout title="Buat Website Agrikultur — Cepat & Indah">
  <style is:global>
    :root {
      --ink: #1a2e05;
      --muted: #8b7355;
      --brand: #f97316; /* orange */
      --secondary: #eab308; /* yellow */
      --accent: #16a34a; /* green */
      --panel: #0f1a02;
    }
    html {
      scroll-behavior: smooth;
    }
    body {
      background: linear-gradient(135deg, #0f1a02 0%, #1a2e05 100%);
      color: #f7fee7;
      font-family:
        Inter,
        ui-sans-serif,
        system-ui,
        -apple-system,
        Segoe UI,
        Roboto,
        "Helvetica Neue",
        Arial;
    }

    /* NAV (minimal) */
    .nav-wrap {
      position: sticky;
      top: 0;
      z-index: 50;
      background: rgba(15, 26, 2, 0.8);
      backdrop-filter: blur(8px);
      border-bottom: 1px solid rgba(249, 115, 22, 0.2);
    }
    .nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 16px;
      padding: 16px 24px;
      max-width: 1200px;
      margin: 0 auto;
    }
    .nav-brand {
      color: #d9f99d;
      text-decoration: none;
      font-size: 18px;
      font-weight: 700;
      letter-spacing: 0.02em;
    }
    .nav-links {
      display: flex;
      gap: 24px;
      align-items: center;
    }
    .nav-links a {
      color: #d9f99d;
      text-decoration: none;
      font-size: 14px;
      transition: color 0.2s;
    }
    .nav-links a:hover {
      color: #f97316;
    }
    .nav-actions {
      display: flex;
      gap: 12px;
      align-items: center;
    }
    .nav-actions a {
      color: #d9f99d;
      text-decoration: none;
      font-size: 14px;
      transition: color 0.2s;
    }
    .nav-actions a:hover {
      color: #f97316;
    }
    .nav .cta {
      background: var(--brand);
      color: #fff;
      padding: 10px 14px;
      border-radius: 8px;
      font-weight: 600;
      transition: all 0.2s;
    }
    .nav .cta:hover {
      background: #ea580c;
      transform: translateY(-1px);
    }
    .mobile-menu-btn {
      display: none;
      background: none;
      border: none;
      color: #d9f99d;
      font-size: 18px;
      cursor: pointer;
    }
    @media (max-width: 768px) {
      .nav-links,
      .nav-actions a:not(.cta) {
        display: none;
      }
      .mobile-menu-btn {
        display: block;
      }
      .nav {
        padding: 12px 20px;
      }
    }

    /* HERO */
    .hero {
      min-height: 100vh;
      display: grid;
      grid-template-columns: 1.2fr 1fr;
    }
    .hero-left {
      background: linear-gradient(135deg, #0f1a02 0%, #1a2e05 100%);
      display: grid;
      align-content: center;
      padding: clamp(24px, 6vw, 120px);
    }
    .eyebrow {
      color: var(--secondary);
      text-transform: uppercase;
      letter-spacing: 0.15em;
      font-weight: 600;
      font-size: 12px;
    }
    .title {
      font-size: clamp(40px, 7vw, 96px);
      line-height: 0.98;
      font-weight: 800;
      letter-spacing: -0.02em;
    }
    #rotating-text {
      color: var(--brand);
      text-shadow:
        0 4px 8px rgba(249, 115, 22, 0.3),
        0 2px 4px rgba(0, 0, 0, 0.2);
      transition: all 0.4s ease;
      display: inline-block;
    }
    .lead {
      color: #d9f99d;
      font-size: clamp(16px, 1.6vw, 22px);
      max-width: 56ch;
    }
    .actions {
      display: flex;
      gap: 12px;
      margin-top: 20px;
    }
    .mr-4 {
      margin-right: 16px;
    }
    .bullets {
      margin-top: 20px;
      color: #a3a3a3;
      font-size: 14px;
    }

    /* RIGHT: animated collage */
    .hero-right {
      position: relative;
      overflow: hidden;
      background: radial-gradient(
          800px 400px at 100% 0%,
          rgba(249, 115, 22, 0.1),
          rgba(234, 179, 8, 0.05)
        ),
        #1a2e05;
    }
    .stack {
      position: absolute;
      inset: 0;
      display: grid;
      place-items: center;
    }
    .frame {
      position: absolute;
      width: min(480px, 42vw);
      aspect-ratio: 16/10;
      border-radius: 18px;
      overflow: hidden;
      border: 1px solid rgba(249, 115, 22, 0.3);
      box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4);
      transform-origin: center;
      opacity: 0.95;
      background: #2d4a0a;
      animation: floatY 9s ease-in-out infinite var(--delay, 0ms);
    }
    .frame img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: saturate(1.05) contrast(1.05);
    }

    /* Parallax layers */
    .f1 {
      transform: translate(-12%, -10%) rotate(-2deg);
      --delay: 0ms;
      z-index: 3;
    }
    .f2 {
      transform: translate(16%, 4%) rotate(2deg);
      --delay: 300ms;
      z-index: 2;
    }
    .f3 {
      transform: translate(0%, 22%) rotate(-1deg);
      --delay: 600ms;
      z-index: 1;
    }

    /* Slow slide background strip */
    .strip {
      position: absolute;
      inset: -10% -20%;
      display: flex;
      gap: 18px;
      transform: rotate(-12deg);
      opacity: 0.9;
    }
    .strip .thumb {
      flex: 0 0 360px;
      height: 220px;
      border-radius: 14px;
      overflow: hidden;
      border: 1px solid rgba(234, 179, 8, 0.2);
    }
    .strip .thumb img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .strip.a {
      top: 10%;
      animation: slideX 40s linear infinite;
    }
    .strip.b {
      bottom: 8%;
      animation: slideX 46s linear infinite reverse;
    }

    @keyframes slideX {
      from {
        transform: translateX(0) rotate(-12deg);
      }
      to {
        transform: translateX(-50%) rotate(-12deg);
      }
    }
    @keyframes floatY {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-8px);
      }
    }

    @media (max-width: 960px) {
      .hero {
        grid-template-columns: 1fr;
      }
      .hero-right {
        min-height: 70vh;
      }
      .hero-left {
        padding: 56px 24px;
      }
      .actions {
        flex-direction: column;
        align-items: stretch;
        gap: 12px;
      }
      .mr-4 {
        margin-right: 0;
        margin-bottom: 12px;
      }
    }

    /* Respect reduced motion */
    @media (prefers-reduced-motion: reduce) {
      .frame,
      .strip {
        animation: none !important;
      }
    }

    /* PROCUREMENT SECTION */
    @media (max-width: 768px) {
      .procurement-grid {
        grid-template-columns: 1fr !important;
        gap: 40px !important;
      }
      .procurement-stats {
        justify-content: center !important;
      }
    }

    /* LOGISTICS SECTION */
    .timeline-item:hover .timeline-dot {
      transform: translateX(-50%) scale(1.2);
    }

    /* QUALITY ASSURANCE SECTION */
    .quality-item {
      --hover-color: 22, 163, 74;
      --active-color: 22, 163, 74;
    }
    .quality-item:nth-child(even) {
      --hover-color: 249, 115, 22;
      --active-color: 249, 115, 22;
    }
    .quality-item:nth-child(3n) {
      --hover-color: 234, 179, 8;
      --active-color: 234, 179, 8;
    }

    /* FOOTER */
    .footer {
      background: #0f1a02;
      padding: 80px 24px 40px;
    }
    .footer-content {
      max-width: 1200px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1.5fr 1fr 1fr 1fr;
      gap: 40px;
    }
    .footer-brand {
      color: #f7fee7;
    }
    .footer-brand h3 {
      font-size: 24px;
      font-weight: 800;
      margin-bottom: 16px;
      color: #f97316;
    }
    .footer-brand p {
      color: #a3a3a3;
      line-height: 1.6;
      margin-bottom: 24px;
    }
    .footer-col h4 {
      font-size: 14px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: #f7fee7;
      margin-bottom: 20px;
    }
    .footer-col ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    .footer-col li {
      margin-bottom: 12px;
    }
    .footer-col a {
      color: #a3a3a3;
      text-decoration: none;
      font-size: 14px;
      transition: color 0.2s;
    }
    .footer-col a:hover {
      color: #f97316;
    }
    .social-links {
      display: flex;
      gap: 16px;
    }
    .social-links a {
      width: 40px;
      height: 40px;
      background: rgba(249, 115, 22, 0.1);
      border: 1px solid rgba(249, 115, 22, 0.2);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #f97316;
      transition: all 0.2s;
    }
    .social-links a:hover {
      background: rgba(249, 115, 22, 0.2);
      transform: translateY(-2px);
    }
    .footer-bottom {
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      margin-top: 48px;
      padding-top: 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: #a3a3a3;
      font-size: 14px;
    }
    .footer-bottom-links {
      display: flex;
      gap: 24px;
    }
    .footer-bottom-links a {
      color: #a3a3a3;
      text-decoration: none;
    }
    .footer-bottom-links a:hover {
      color: #f97316;
    }
    @media (max-width: 768px) {
      .footer {
        padding: 60px 24px 32px;
      }
      .footer-content {
        grid-template-columns: 1fr 1fr;
        gap: 32px;
      }
      .footer-brand {
        grid-column: 1 / -1;
      }
      .footer-bottom {
        flex-direction: column;
        gap: 16px;
        text-align: center;
      }
      .footer-bottom-links {
        gap: 16px;
      }
    }
    @media (max-width: 480px) {
      .footer-content {
        grid-template-columns: 1fr;
        gap: 24px;
      }
      .social-links {
        justify-content: center;
      }
    }
  </style>

  <div class="nav-wrap">
