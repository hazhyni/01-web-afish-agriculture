---
const { article } = Astro.props;
---

<article style="padding:60px 24px; background:#0f1a02">
  <div style="max-width:800px; margin:0 auto">
    <!-- Featured Image -->
    <div style="margin-bottom:40px; border-radius:16px; overflow:hidden">
      <img 
        src={article.thumbnail} 
        alt={article.title}
        style="width:100%; height:300px; object-fit:cover"
      />
    </div>

    <!-- Introduction -->
    <div style="background:rgba(249,115,22,0.1); border-left:4px solid #f97316; padding:24px; border-radius:8px; margin-bottom:40px">
      <p style="color:#f7fee7; font-size:18px; line-height:1.6; margin:0; font-style:italic">
        {article.content.introduction}
      </p>
    </div>

    <!-- Content Sections -->
    {article.content.sections.map((section) => (
      <section style="margin-bottom:40px">
        <h2 style="color:#f97316; font-size:24px; font-weight:700; margin-bottom:16px">
          {section.heading}
        </h2>
        <p style="color:#d9f99d; font-size:16px; line-height:1.7; margin:0">
          {section.body}
        </p>
      </section>
    ))}

    <!-- Conclusion -->
    <div style="background:rgba(22,163,74,0.1); border-left:4px solid #16a34a; padding:24px; border-radius:8px; margin-top:40px">
      <h3 style="color:#16a34a; font-size:18px; font-weight:600; margin-bottom:12px">
        Kesimpulan
      </h3>
      <p style="color:#f7fee7; font-size:16px; line-height:1.6; margin:0">
        {article.content.conclusion}
      </p>
    </div>

    <!-- Tags -->
    <div style="margin-top:40px; padding-top:24px; border-top:1px solid rgba(255,255,255,0.1)">
      <div style="display:flex; flex-wrap:wrap; gap:8px">
        {article.tags.map((tag) => (
          <span style="background:rgba(234,179,8,0.2); color:#eab308; padding:4px 12px; border-radius:12px; font-size:12px; font-weight:500">
            #{tag}
          </span>
        ))}
      </div>
    </div>
  </div>
</article>

<style>
  @media (max-width: 768px) {
    article {
      padding: 40px 16px !important;
    }
  }
</style>