---
import Button from "./Button.astro";
---

<section class="hero">
  <div class="hero-left">
    <div class="eyebrow">Insight — Pertanian Modern</div>
    <h1 class="title">Insight<br />tentang Pertanian</h1>
    <p class="lead">
      Temukan tips, teknik, dan inovasi terbaru dalam dunia pertanian untuk meningkatkan produktivitas dan keberlanjutan usaha tani Anda.
    </p>
    <div class="actions">
      <Button variant="primary" href="#artikel">Baca Artikel</Button>
      <Button variant="ghost" href="#kategori">Jelajahi Kategori</Button>
    </div>
    <div class="bullets">
      50+ artikel edukasi • Tips praktis • Teknologi terbaru • Panduan lengkap
    </div>
  </div>

  <div class="hero-right">
    <div class="strip a">
      <div class="thumb"><img src="/img/farm.jpg" alt="Agriculture" loading="lazy" /></div>
      <div class="thumb"><img src="/img/padi.jpg" alt="Agriculture" loading="lazy" /></div>
      <div class="thumb"><img src="/img/rice.jpg" alt="Agriculture" loading="lazy" /></div>
      <div class="thumb"><img src="/img/tea.jpg" alt="Agriculture" loading="lazy" /></div>
      <div class="thumb"><img src="/img/wheat.jpg" alt="Agriculture" loading="lazy" /></div>
      <div class="thumb"><img src="/img/check.jpg" alt="Agriculture" loading="lazy" /></div>
    </div>
    <div class="strip b">
      <div class="thumb"><img src="/img/teh.jpg" alt="Agriculture" loading="lazy" /></div>
      <div class="thumb"><img src="/img/farm.jpg" alt="Agriculture" loading="lazy" /></div>
      <div class="thumb"><img src="/img/padi.jpg" alt="Agriculture" loading="lazy" /></div>
      <div class="thumb"><img src="/img/rice.jpg" alt="Agriculture" loading="lazy" /></div>
      <div class="thumb"><img src="/img/tea.jpg" alt="Agriculture" loading="lazy" /></div>
      <div class="thumb"><img src="/img/wheat.jpg" alt="Agriculture" loading="lazy" /></div>
    </div>

    <div class="stack">
      <figure class="frame f1">
        <img src="/img/farm.jpg" alt="Preview 1" />
      </figure>
      <figure class="frame f2">
        <img src="/img/padi.jpg" alt="Preview 2" />
      </figure>
      <figure class="frame f3">
        <img src="/img/tea.jpg" alt="Preview 3" />
      </figure>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1.2fr 1fr;
  }
  .hero-left {
    background: linear-gradient(135deg, #0f1a02 0%, #1a2e05 100%);
    display: grid;
    align-content: center;
    padding: clamp(24px, 6vw, 120px);
  }
  .eyebrow {
    color: var(--secondary);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-weight: 600;
    font-size: 12px;
  }
  .title {
    font-size: clamp(40px, 7vw, 96px);
    line-height: 0.98;
    font-weight: 800;
    letter-spacing: -0.02em;
  }
  .lead {
    color: #d9f99d;
    font-size: clamp(16px, 1.6vw, 22px);
    max-width: 56ch;
  }
  .actions {
    display: flex;
    gap: 12px;
    margin-top: 20px;
  }

  .bullets {
    margin-top: 20px;
    color: #a3a3a3;
    font-size: 14px;
  }

  .hero-right {
    position: relative;
    overflow: hidden;
    background: radial-gradient(
        800px 400px at 100% 0%,
        rgba(249, 115, 22, 0.1),
        rgba(234, 179, 8, 0.05)
      ),
      #1a2e05;
  }
  .stack {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
  }
  .frame {
    position: absolute;
    width: min(480px, 42vw);
    aspect-ratio: 16/10;
    border-radius: 18px;
    overflow: hidden;
    border: 1px solid rgba(249, 115, 22, 0.3);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4);
    transform-origin: center;
    opacity: 0.95;
    background: #2d4a0a;
    animation: floatY 9s ease-in-out infinite var(--delay, 0ms);
  }
  .frame img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(1.05) contrast(1.05);
  }

  .f1 {
    transform: translate(-12%, -10%) rotate(-2deg);
    --delay: 0ms;
    z-index: 3;
  }
  .f2 {
    transform: translate(16%, 4%) rotate(2deg);
    --delay: 300ms;
    z-index: 2;
  }
  .f3 {
    transform: translate(0%, 22%) rotate(-1deg);
    --delay: 600ms;
    z-index: 1;
  }

  .strip {
    position: absolute;
    inset: -10% -20%;
    display: flex;
    gap: 18px;
    transform: rotate(-12deg);
    opacity: 0.9;
  }
  .strip .thumb {
    flex: 0 0 360px;
    height: 220px;
    border-radius: 14px;
    overflow: hidden;
    border: 1px solid rgba(234, 179, 8, 0.2);
  }
  .strip .thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .strip.a {
    top: 10%;
    animation: slideX 40s linear infinite;
  }
  .strip.b {
    bottom: 8%;
    animation: slideX 46s linear infinite reverse;
  }

  @keyframes slideX {
    from {
      transform: translateX(0) rotate(-12deg);
    }
    to {
      transform: translateX(-50%) rotate(-12deg);
    }
  }
  @keyframes floatY {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  @media (max-width: 960px) {
    .hero {
      grid-template-columns: 1fr;
    }
    .hero-right {
      min-height: 70vh;
    }
    .hero-left {
      padding: 56px 24px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .frame,
    .strip {
      animation: none !important;
    }
  }
</style>