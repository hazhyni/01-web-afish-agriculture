---
import Button from "./Button.astro";
import contentData from "../data/content.json";

const blogPosts = contentData.articles.map(article => ({
  id: article.id,
  title: article.title,
  excerpt: article.excerpt,
  image: article.thumbnail,
  category: article.category,
  date: new Date(article.published_at).toLocaleDateString('id-ID', { 
    day: 'numeric', 
    month: 'short', 
    year: 'numeric' 
  }),
  readTime: "5 menit",
  author: article.author
}));
---

<section class="blog-section">
  <div class="container">
    <h2 class="section-title">Artikel Terbaru</h2>
    <div class="blog-grid" id="blogGrid">
      {blogPosts.map(post => (
        <article class="blog-card" data-category={post.category}>
            <div class="card-image">
              <img src={post.image} alt={post.title} />
              <div class="category-badge">{post.category}</div>
            </div>
            <div class="card-content">
              <div class="card-meta">
                <span class="date">{post.date}</span>
                <span class="read-time">{post.readTime}</span>
              </div>
              <h3 class="card-title">{post.title}</h3>
              <p class="card-excerpt">{post.excerpt}</p>
              <div class="card-footer">
                <div class="author">
                  <span>üë®‚Äçüåæ {post.author}</span>
                </div>
                <a 
                  href={`/artikel/${contentData.articles.find(a => a.id === post.id)?.slug}`}
                  style="background:#f97316; color:white; padding:8px 16px; border-radius:8px; text-decoration:none; font-size:0.9rem; font-weight:600; display:inline-block; transition:all 0.3s"
                  onmouseover="this.style.background='#ea580c'"
                  onmouseout="this.style.background='#f97316'"
                >
                  Baca Selengkapnya
                </a>
              </div>
            </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .blog-section {
    padding: 60px 20px;
    background: linear-gradient(135deg, #0f1a02 0%, #1a2e05 50%, #2d4a0a 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 24px;
  }
  
  .section-title {
    text-align: center;
    margin-bottom: 3rem;
    color: #f7fee7;
    font-weight: 800;
    font-size: clamp(28px, 4vw, 40px);
  }
  
  .blog-card {
    background: rgba(249,115,22,0.08);
    border: 1px solid rgba(249,115,22,0.15);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(249,115,22,0.15);
    border-color: rgba(249,115,22,0.3);
  }
  
  .card-image {
    position: relative;
    height: 180px;
    overflow: hidden;
  }
  
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .blog-card:hover .card-image img {
    transform: scale(1.05);
  }
  
  .category-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: #f97316;
    color: white;
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: capitalize;
  }
  
  .card-content {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .card-meta {
    display: flex;
    justify-content: space-between;
    margin-bottom: 12px;
    font-size: 0.8rem;
    color: #a3a3a3;
  }
  
  .card-title {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 12px;
    color: #f7fee7;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .card-excerpt {
    color: #d9f99d;
    line-height: 1.5;
    margin-bottom: 16px;
    flex-grow: 1;
    font-size: 0.9rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    gap: 12px;
  }
  
  .author {
    font-size: 0.8rem;
    color: #16a34a;
    font-weight: 500;
    flex: 1;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @media (max-width: 768px) {
    .blog-section {
      padding: 40px 16px;
    }
    
    .blog-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    
    .card-footer {
      flex-direction: column;
      align-items: stretch;
      gap: 12px;
    }
    
    .card-content {
      padding: 16px;
    }
  }
  
  @media (max-width: 480px) {
    .card-image {
      height: 160px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add loading animation
    const blogCards = document.querySelectorAll('.blog-card');
    blogCards.forEach((card, index) => {
      card.style.animationDelay = `${index * 0.1}s`;
      card.style.animation = 'fadeIn 0.6s ease forwards';
    });
  });
</script>