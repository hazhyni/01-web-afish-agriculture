---
export interface Props {
  variant?: 'primary' | 'green' | 'yellow' | 'ghost';
  href?: string;
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { variant = 'primary', href, size = 'md', class: className = '', ...rest } = Astro.props;

const baseClasses = 'btn';
const variantClasses = {
  primary: 'btn-primary',
  green: 'btn-green', 
  yellow: 'btn-yellow',
  ghost: 'btn-ghost'
};
const sizeClasses = {
  sm: 'btn-sm',
  md: 'btn-md',
  lg: 'btn-lg'
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`.trim();
---

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    border-radius: 10px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.2s;
    border: none;
    cursor: pointer;
    justify-content: center;
    font-family: inherit;
  }

  .btn-sm {
    padding: 12px 20px;
    font-size: 14px;
  }

  .btn-md {
    padding: 16px 24px;
    font-size: 16px;
  }

  .btn-lg {
    padding: 20px 32px;
    font-size: 18px;
  }

  .btn-primary {
    background: #f97316;
    color: #fff;
    box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
  }

  .btn-primary:hover {
    background: #ea580c;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(249, 115, 22, 0.4);
  }

  .btn-green {
    background: #16a34a;
    color: #fff;
    box-shadow: 0 4px 12px rgba(22, 163, 74, 0.3);
  }

  .btn-green:hover {
    background: #15803d;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(22, 163, 74, 0.4);
  }

  .btn-yellow {
    background: #eab308;
    color: #1a2e05;
    box-shadow: 0 4px 12px rgba(234, 179, 8, 0.3);
  }

  .btn-yellow:hover {
    background: #ca8a04;
    color: #1a2e05;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(234, 179, 8, 0.4);
  }

  .btn-ghost {
    border: 1px solid #16a34a;
    color: #16a34a;
    background: rgba(22, 163, 74, 0.05);
  }

  .btn-ghost:hover {
    background: rgba(22, 163, 74, 0.15);
    transform: translateY(-2px);
    border-color: rgba(22, 163, 74, 0.6);
  }

  @media (max-width: 480px) {
    .btn {
      width: 100%;
    }
    .btn-sm {
      padding: 10px 16px;
      font-size: 13px;
    }
    .btn-md {
      padding: 14px 20px;
      font-size: 14px;
    }
    .btn-lg {
      padding: 16px 24px;
      font-size: 16px;
    }
  }
</style>

{href ? (
  <a href={href} class={classes} {...rest}>
    <slot />
  </a>
) : (
  <button class={classes} {...rest}>
    <slot />
  </button>
)}