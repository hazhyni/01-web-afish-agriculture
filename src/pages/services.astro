---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Button from '../components/Button.astro';
import Footer from '../components/Footer.astro';

const images = [
  '/img/farm.jpg',
  '/img/padi.jpg',
  '/img/rice.jpg', 
  '/img/tea.jpg',
  '/img/teh.jpg',
  '/img/wheat.jpg',
  '/img/check.jpg'
];
---

<Layout title="Services - AGRISPACE">
  <style>
    :root {
      --brand-grad: linear-gradient(135deg, #16a34a 0%, #22c55e 100%);
      --yellow: #22c55e;
    }
    
    body {
      background: linear-gradient(135deg, #0f1a02 0%, #1a2e05 100%);
      color: #f7fee7;
    }
    


    /* HERO */
    .hero {
      min-height: 100vh;
      display: grid;
      grid-template-columns: 1.2fr 1fr;
    }
    .hero-left {
      background: linear-gradient(135deg, #0f1a02 0%, #1a2e05 100%);
      display: grid;
      align-content: center;
      padding: clamp(24px, 6vw, 120px);
    }
    .eyebrow {
      color: var(--yellow);
      text-transform: uppercase;
      letter-spacing: 0.15em;
      font-weight: 700;
      font-size: 12px;
    }
    .title {
      font-size: clamp(40px, 7vw, 96px);
      line-height: 0.98;
      font-weight: 800;
      letter-spacing: -0.02em;
      color: #f7fee7;
    }
    .lead {
      color: #d9f99d;
      font-size: clamp(16px, 1.6vw, 22px);
      max-width: 56ch;
    }
    .actions {
      display: flex;
      gap: 12px;
      margin-top: 20px;
    }
    
    .actions button, .actions a {
      transition: all 0.3s ease;
    }
    
    .actions button:hover, .actions a:hover {
      transform: translateY(-2px);
    }

    .bullets {
      margin-top: 20px;
      color: #a3a3a3;
      font-size: 14px;
    }
    .bullets b {
      color: var(--yellow);
    }

    /* RIGHT: animated collage */
    .hero-right {
      position: relative;
      overflow: hidden;
      background: radial-gradient(
          800px 400px at 100% 0%,
          rgba(34, 197, 94, 0.2),
          transparent
        ),
        radial-gradient(
          700px 380px at 0% 100%,
          rgba(22, 163, 74, 0.1),
          transparent
        ),
        #1a2e05;
    }
    .stack {
      position: absolute;
      inset: 0;
      display: grid;
      place-items: center;
    }
    .frame {
      position: absolute;
      width: min(480px, 42vw);
      aspect-ratio: 16/10;
      border-radius: 18px;
      overflow: hidden;
      border: 1px solid rgba(34, 197, 94, 0.3);
      box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4);
      transform-origin: center;
      opacity: 0.95;
      background: #2d4a0a;
      animation: floatY 9s ease-in-out infinite var(--delay, 0ms);
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .frame:hover {
      transform: scale(1.05);
      box-shadow: 0 40px 80px rgba(34, 197, 94, 0.2);
      border-color: rgba(34, 197, 94, 0.6);
    }
    .frame img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: saturate(1.05) contrast(1.05);
    }

    /* Parallax layers */
    .f1 {
      transform: translate(-12%, -10%) rotate(-2deg);
      --delay: 0ms;
      z-index: 3;
    }
    .f2 {
      transform: translate(16%, 4%) rotate(2deg);
      --delay: 300ms;
      z-index: 2;
    }
    .f3 {
      transform: translate(0%, 22%) rotate(-1deg);
      --delay: 600ms;
      z-index: 1;
    }

    /* Slow slide background strip */
    .strip {
      position: absolute;
      inset: -10% -20%;
      display: flex;
      gap: 18px;
      transform: rotate(-12deg);
      opacity: 0.9;
    }
    .strip .thumb {
      flex: 0 0 360px;
      height: 220px;
      border-radius: 14px;
      overflow: hidden;
      border: 1px solid rgba(34, 197, 94, 0.2);
    }
    .strip .thumb img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .strip.a {
      top: 10%;
      animation: slideX 40s linear infinite;
    }
    .strip.b {
      bottom: 8%;
      animation: slideX 46s linear infinite reverse;
    }

    @keyframes slideX {
      from {
        transform: translateX(0) rotate(-12deg);
      }
      to {
        transform: translateX(-50%) rotate(-12deg);
      }
    }
    @keyframes floatY {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-8px);
      }
    }

    @media (max-width: 960px) {
      .hero {
        grid-template-columns: 1fr;
      }
      .hero-right {
        min-height: 70vh;
      }
      .hero-left {
        padding: 56px 24px;
      }
    }

    /* Respect reduced motion */
    @media (prefers-reduced-motion: reduce) {
      .frame,
      .strip {
        animation: none !important;
      }
    }
  </style>

  <Navbar />

  <!-- HERO ala Squarespace: teks besar kiri, kolase bergerak kanan -->
  <section class="hero">
    <div class="hero-left">
      <div class="eyebrow">Template agrikultur â€” tanpa ribet</div>
