        Marketplace
      </div>
    </div>

    <div class="hero-right">
      <!-- slow background strips of thumbs -->
      <div class="strip a">
        {
          images.slice(0, 6).map((src) => (
            <div class="thumb">
              <img src={src} alt="Agriculture" loading="lazy" />
            </div>
          ))
        }
      </div>
      <div class="strip b">
        {
          images.slice(3, 9).map((src) => (
            <div class="thumb">
              <img src={src} alt="Agriculture" loading="lazy" />
            </div>
